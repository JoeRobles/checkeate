{% extends 'admin-layout.html.twig' %}

{% block page_title %}Detalle de archivo{% endblock %}

{% block page_content %}
    <div class="box">
        <div class="box-body">
            <table class="table table-bordered dataTable">
                <tr>
                    <th>Id</th>
                    <td>{{ file.id }}</td>
                </tr>
                <tr>
                    <th>Nombre</th>
                    <td>{{ file.name }}</td>
                </tr>
                <tr>
                    <th>Tipo</th>
                    <td>{{ file.type }}</td>
                </tr>
                <tr>
                    <th>Uri</th>
                    <td>{{ file.uri }}</td>
                </tr>
                <tr>
                    <th>Archivo</th>
                    <td>
                        {% if file.extension in ['jpeg', '.jpg', '.png', '.gif', '.bmp'] %}
                        <img src="/{{ file.uploaddir }}/{{ file.path }}">
                        {% else %}
                        {{ file.original }}
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>Creado por</th>
                    <td>{{ file.createdby.firstname }} {{ file.createdby.lastname }}</td>
                </tr>
                <tr>
                    <th>Estado</th>
                    <td>
                        {% if file.status  == 1 %}
                            {{ 'Activo' }}
                        {% else %}
                            {{ 'Inactivo' }}
                        {% endif %}
                    </td>
                </tr>
            </table>
        </div>
        <div class="box-footer">
            <a class="btn btn-default pull-left" href="{{ path('file_index') }}">Volver al listado</a>
            <a class="btn btn-primary pull-left"  href="{{ path('file_edit', { 'id': file.id }) }}">Editar</a>
            {{ form_start(delete_form) }}
            <input class="btn btn-danger" type="submit" value="Eliminar">
            {{ form_end(delete_form) }}
        </div>
{% endblock %}