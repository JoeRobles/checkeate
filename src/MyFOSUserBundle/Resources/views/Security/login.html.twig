{% extends 'admin-layout.html.twig' %}

{% block page_content -%}
    {% trans_default_domain 'FOSUserBundle' %}
    {% if error %}
        <div class="alert alert-danger fade in">
            <button class="close" data-dismiss="alert" type="button">Ã—</button>
            <h4><i class="icon fa fa-ban"></i> Error!</h4>
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}
    <div class="row">
        <div class="col-sm-6">
            <h3 class="text-center">Log In</h3>
            <form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal" role="form">
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="username">{{ 'security.login.username'|trans }}</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="username" name="_username" required="required" type="text" value="{{ last_username }}">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="password">{{ 'security.login.password'|trans }}</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="password" name="_password" required="required" type="password">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-8">
                        <div class="checkbox">
                            <label>
                                <input id="remember_me" name="_remember_me" type="checkbox" checked> {{ 'security.login.remember_me'|trans }}
                            </label>
                        </div>
                    </div>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button class="btn btn-primary" id="_submit" name="_submit" type="submit">{{ 'security.login.submit'|trans }}</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-sm-6">
            <h3 class="text-center">Or</h3>
            <a class="btn btn-primary center-block" href="{{ path('fos_user_registration_register') }}">Create account</a>
            <hr>
            <a class="btn btn-primary center-block" href="{{ path('fos_user_resetting_request') }}">Forgot password</a>
        </div>
    </div>
{% endblock %}